<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.presentation.controller.TitleSearchController">
   <children>
      <HBox styleClass="backgroundPane" stylesheets="@main.css" VBox.vgrow="SOMETIMES">
         <children>
            <TextField fx:id="txtSearchBar" minHeight="30.0" minWidth="200.0" onAction="#searchMovies" prefWidth="400.0" promptText="Movie title" />
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </HBox>
      <FlowPane fx:id="flowPane" hgap="20.0" minHeight="300.0" minWidth="500.0" prefWidth="900.0" styleClass="backgroundPane" stylesheets="@main.css" vgap="20.0">
         <padding>
            <Insets top="30.0" />
         </padding>
         <children>
            <ListView fx:id="listView" prefHeight="200.0" prefWidth="563.0" />
         </children>
      </FlowPane>
   </children>
</VBox>
